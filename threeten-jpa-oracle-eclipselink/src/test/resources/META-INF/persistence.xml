    <class>com.github.marschall.threeten.jpa.oracle.OracleOffsetDateTimeConverter</class>
    <class>com.github.marschall.threeten.jpa.oracle.OracleZonedDateTimeConverter</class>
    <class>com.github.marschall.threeten.jpa.oracle.OracleDurationConverter</class>
    <class>com.github.marschall.threeten.jpa.oracle.OraclePeriodConverter</class>

    <shared-cache-mode>NONE</shared-cache-mode>

    <properties>
      <property name="eclipselink.target-database" value="Oracle" />
      <property name="eclipselink.weaving" value="false" />
    </properties>
  </persistence-unit>

